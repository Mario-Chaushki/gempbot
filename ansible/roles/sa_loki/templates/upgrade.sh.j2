#!/bin/bash

LOKI_VERSION="{{ loki_version }}"
cd {{ loki_base_dir }}
wget  https://github.com/grafana/loki/releases/download/${LOKI_VERSION}/loki-linux-arm64.zip
sudo service loki stop
unzip loki-linux-arm64.zip
sudo chown -R {{ loki_user }}:root {{ loki_base_dir }}/loki-linux-arm64
sudo chmod +x {{ loki_base_dir }}/loki-linux-arm64
#             Source                                  Link
sudo ln -f -s {{ loki_base_dir }}/loki-linux-arm64 {{ loki_base_dir }}/loki
sudo service loki start
